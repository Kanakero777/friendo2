<div class="modal fade" id="signUpModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header mh">
        <button type="button" class="close hoge" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body col-md-10">
      <h5 class="modal-title"><h1>Sign Up</h1></h5>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email",class:"col-md-11" %>
          </div>

          <div class="field">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder:"Password (6 characters minimum)", class:"col-md-11" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password Confirmation", class:"col-md-11" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
          </div>
        <% end %>
        <div class="or">
          or
         </div>
        <div class="facebook">
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Sign up with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider),class: "btn btn-primary btn-lg col-md-11" %><br />
          <% end %>
        <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
