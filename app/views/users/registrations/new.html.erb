<div class="user_signUp">
  <div class="container">
  <div class="row">
   <div class="col-md-2">

   </div>
  <div class="col-md-9">
  <h1>Sign Up</h1>
  <button type="button" class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>//追記
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.text_field :username, autofocus: true,placeholder:"Username", class:"col-md-11"%>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email", class:"col-md-11"%>
  </div>

  <div class="field">
    <% if @minimum_password_length %><em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password",placeholder:"Password(6 characters minimum)", class:"col-md-11" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"Password Confirmation", class:"col-md-11" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
  <% end %>
  <%= render "users/shared/links" %>
  <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
  </div>
 </div>
