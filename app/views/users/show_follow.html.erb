<div class="show_following">
  <h2>Following</h2>
  <% @user.followings.each do |user| %>
  <div class="following_box">
    <div class="following_image">
      <%if user.uid == nil%>
       <%= link_to image_tag("#{user.profile.image}"), user_path(user) %>
      <% else %>
       <%= link_to image_tag("#{user.facebook_image}"), user_path(user) %>
      <% end %>
    </div>
      <%= link_to user.profile.username, user_path(user) %><br>
  </div>
  <% end %>
</div>
